<% flash.each do|message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>

<h1>Logga in - Administratör</h1>

<!--http://seanmcevoy.com/bootstrap-form_tag-vs-form_for/-->
<%= form_tag adminlogin_path, method: "post", :class => "form-horizontal", :role => "form" do %>
  <div class="form-group">
    <%= label_tag :username, "Användarnamn", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= text_field_tag :username, nil, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Lösenord", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4">
      <%= submit_tag "Logga in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<p><%= link_to "Logga in - Användare", root_path %></p>