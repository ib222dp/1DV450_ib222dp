<% if flash[:notice] %>
<div class="notice">
  <%= flash[:notice] %>
</div>
<% end %>

<div id="login">
<h1>Logga in - Administratör</h1>

<fieldset>
  <%= form_tag(adminlogin_path, method: "post") do %>

  <p><%= label_tag(:username, "Användarnamn") %></p>
  <p><%= text_field_tag(:username) %></p>

  <p><%= label_tag(:password, "Lösenord") %></p>
  <p><%= password_field_tag(:password) %></p>
  <p><%= submit_tag("Logga in") %></p>
<% end %>
</fieldset>
  <%= link_to "Logga in - Användare", root_path %><br />
</div>