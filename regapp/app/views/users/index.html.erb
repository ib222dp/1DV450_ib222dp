<% flash.each do|message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>

<h1>Logga in</h1>
  
<%= form_tag userlogin_path, method: "post", :class=>"form-horizontal", :role=> "form" do %>
  <div class="form-group">
    <%= label_tag :email, "Epost", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= email_field_tag :email, nil, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= label_tag :password, "Lösenord", class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-4">
      <%= submit_tag "Logga in", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<p><%= link_to "Skapa användarkonto", new_user_path %></p>
<p><%= link_to "Logga in - Administratör", admin_path %></p>

