<% if flash[:notice] %>
<div class="notice">
  <%= flash[:notice] %>
</div>
<% end %>

<div id="login">
<h1>Logga in</h1>

<fieldset>
<%= form_tag(login_path, method: "post") do %>

  <p><%= label_tag(:email, "Epost") %></p>
  <p><%= email_field_tag(:email) %></p>

  <p><%= label_tag(:password, "Lösenord") %></p>
  <p><%= password_field_tag(:password) %></p>
  <p><%= submit_tag("Logga in") %></p>
<% end %>
</fieldset>

<%= link_to "Skapa användarkonto", new_user_path %>
</div>